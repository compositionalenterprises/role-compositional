{% for bind_mountpoint in compositional_bookstack_bind_mountpoints %}
location {{ bind_mountpoint['location'] }} {
    access_log /var/log/nginx/services/bookstack_{{ bind_mountpoint['location'].split('/')[-2] }}_access.log;
}
{% endfor %}

location /bookstack/ {
    access_log /var/log/nginx/services/bookstack_main_access.log;
    proxy_headers_hash_max_size 512;
    proxy_headers_hash_bucket_size 64;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    add_header Front-End-Https on;
    proxy_pass   http://bookstack:8080/;
}
